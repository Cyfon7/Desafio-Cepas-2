<%= form_with(model: wine) do |form| %>
  <% if wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
        <% wine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <div class="form-group col-3">
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div class="form-group col-9 ml-auto">
      <%= form.label :varietal %>
      <%= form.select :varietal, Wine.varietals.keys %>
    </div>
  </div>

  <div class="form-row">
    <div id="wine_grapes">
      <%= form.fields_for :wine_grapes do |strain_form| %>
        <%= render "wine_grapes_fields", f: strain_form %>
      <% end %>


      <div class="links my-3">
        <%= link_to_add_association form, :wine_grapes, partial: 'wines/wine_grapes_fields' do %>
          <span class="pl-1"><i class="fas fa-plus-square fa-2x"></i>  Add Strain</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div id="wine_reviewers">
      <%= form.fields_for :wine_reviewers do |score_form| %>
        <%= render "wine_reviewers_fields", f: score_form %>
      <% end %>


      <div class="links my-3">
        <%= link_to_add_association form, :wine_reviewers, partial: 'wines/wine_reviewers_fields' do %>
          <span class="pl-1"><i class="fas fa-plus-square fa-2x"></i>  Add Score</span>
        <% end %>
      </div>
    </div>
  </div>

  





  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
