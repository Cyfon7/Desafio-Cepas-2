<div class="nested-fields form-inline my-2" >
    <div class="form-group mx-auto">
      <%= f.select :reviewer_id, Reviewer.all.order_enologist_by_age.collect { |enologist| [enologist.name, enologist.id] }, prompt: "Choose Enologist: " %>
    </div>

    <div class="form-group mx-3">
      <%= f.label :score, class: "mr-2" %> 
      <%= f.number_field :score, in: 0..100, step: 1 %>
      <span class="ml-2">(0 - 100%)<span>
    </div>
    
    <%= link_to_remove_association f do %>
      <i class="fas fa-minus-square fa-2x"></i>
    <% end %>
  
</div>